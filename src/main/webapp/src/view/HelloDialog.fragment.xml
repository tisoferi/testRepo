<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core" >
	<Dialog
		title="{i18n>helloMsg}" >
		<content>
			<core:Icon
				src="sap-icon://hello-world"
				size="8rem"
				class="sapUiMediumMargin" />
		</content>
		<beginButton>
			<Button
				text="{i18n>dialogCloseButtonText}"
				press="onCloseDialog" />
		</beginButton>
	</Dialog>
</core:FragmentDefinition>